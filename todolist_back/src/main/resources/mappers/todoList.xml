<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toyproject.todolist.repository.TodoListMapper">
    <insert id="save" parameterType="com.toyproject.todolist.entity.TodoList">
        insert into
            todoList_tb
        values(0, #{message}, #{date})

    </insert>
    <update id="update">
        update
            todoList_tb
        set
            message = #{message},
            date = #{date}
        where
            todoId = #{todoId}

    </update>
    <delete id="delete" parameterType="integer">
        delete
        from
            todoList_tb
        where
            todoId = #{todoId}
    </delete>

    <select id="findTodoListById" resultType="com.toyproject.todolist.entity.TodoList">

    </select>
</mapper>